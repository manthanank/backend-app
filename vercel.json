{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/api-docs",
      "dest": "index.js"
    },
    {
      "src": "/api-docs/(.*\\.css)",
      "headers": { "content-type": "text/css" },
      "dest": "index.js"
    },
    {
      "src": "/api-docs/(.*\\.js)",
      "headers": { "content-type": "application/javascript" },
      "dest": "index.js" 
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}